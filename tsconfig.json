{
  "compilerOptions": {
    /* Base Options: */
    "target": "ES2022",
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* If you're building for a library: */
    // "declaration": true,

    /* If you're using source maps: */
    "sourceMap": true,

    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
